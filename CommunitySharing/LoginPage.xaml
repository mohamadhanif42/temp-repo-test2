<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunitySharing.LoginPage"
             Title="Login"
             Shell.NavBarIsVisible="False">

	<!-- Background Gradient -->
	<ContentPage.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
			<GradientStop Color="#FFE1CC" Offset="0.0" />
			<GradientStop Color="#FFF5C8" Offset="1.0" />
		</LinearGradientBrush>
	</ContentPage.Background>

	<ScrollView>
		<Grid Padding="30"
              RowDefinitions="Auto, *, Auto"
              RowSpacing="25">

			<!-- TITLE -->
			<Label
                Grid.Row="0"
                Text="Create Account"
                Style="{StaticResource AuthTitleLabel}" />

			<!-- FORM -->
			<VerticalStackLayout Grid.Row="1" Spacing="15">

				<Entry
                    x:Name="EmailEntry"
                    Placeholder="Email"
                    Style="{StaticResource AuthEntry}"
                    Keyboard="Email" />

				<Entry
                    x:Name="PasswordEntry"
                    Placeholder="Password"
                    Style="{StaticResource AuthEntry}"
                    IsPassword="True"
                    Completed="OnPasswordCompleted"
                    TextChanged="OnPasswordTextChanged" />

				<HorizontalStackLayout Spacing="10">
					<CheckBox x:Name="ShowPasswordCheckBox"
                              CheckedChanged="OnShowPasswordCheckedChanged" />
					<Label Text="Show Password"
                           VerticalOptions="Center"
                           TextColor="Black" />
                </HorizontalStackLayout>

                <!-- signin checkbox 
                <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                    <CheckBox x:Name="KeepSignedInCheckBox" />
                    <Label Text="Keep me signed in" VerticalOptions="Center" TextColor="Black" />
                </HorizontalStackLayout> -->

                <Label
                    Text="Forgot Password?"
                    TextColor="#3B82F6"
                    FontAttributes="Bold"
                    HorizontalOptions="End">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Tapped="OnForgotPasswordClicked" />
					</Label.GestureRecognizers>
				</Label>

				<Button
                    Text="Log In"
                    BackgroundColor="#3B82F6"
                    TextColor="White"
                    CornerRadius="30"
                    HeightRequest="55"
                    Clicked="OnLoginClicked" />

				<Label x:Name="ValidationMessageLabel"
                       TextColor="Red"
                       FontSize="13"
                       HorizontalOptions="Center"
                       IsVisible="False" />

			</VerticalStackLayout>

			<!-- FOOTER -->
			<HorizontalStackLayout Grid.Row="2" HorizontalOptions="Center" Spacing="5">
				<Label Text="Don't have an account?" TextColor="Black" />

				<Label Text="Sign Up" TextColor="#3B82F6" FontAttributes="Bold">
					<Label.GestureRecognizers>
						<TapGestureRecognizer Tapped="OnSignUpClicked" />
					</Label.GestureRecognizers>
				</Label>
			</HorizontalStackLayout>

		</Grid>
	</ScrollView>

</ContentPage>
