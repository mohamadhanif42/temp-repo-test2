<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunitySharing.IntroductionPage"
             Shell.NavBarIsVisible="False">

	<!-- Background Gradient -->
	<ContentPage.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="#FFE1CC" Offset="0.0" />
			<GradientStop Color="#FFF5C8" Offset="1.0" />
		</LinearGradientBrush>
	</ContentPage.Background>

	<Grid RowDefinitions="Auto, *, Auto"
          Padding="25"
          RowSpacing="35">

		<!-- TOP SECTION -->
		<VerticalStackLayout Grid.Row="0"
                             HorizontalOptions="Center"
                             Spacing="12">

			<Image
                Source="app_logo.png"
                HeightRequest="85"
                WidthRequest="85" />

			<Label
                Text="Share &amp; Connect"
                FontSize="26"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="Center" />

			<Label
                Text="Community. Sharing. Together"
                FontSize="16"
                TextColor="Black"
                Opacity="0.8"
                HorizontalOptions="Center" />
		</VerticalStackLayout>

		<!-- MIDDLE SECTION -->
		<VerticalStackLayout Grid.Row="1"
                             VerticalOptions="Center"
                             Spacing="25">

			<Image
                Source="intro_illustration.png"
                HeightRequest="230"
                Aspect="AspectFit" />

			<Label
                Text="Connect. Share. Thrive"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalTextAlignment="Center" />

			<Label
                Text="Join your local community to share extra food and resources with neighbors. Reduce waste, build connections and help others thrive."
                FontSize="16"
                TextColor="Black"
                Opacity="0.75"
                HorizontalTextAlignment="Center" />
		</VerticalStackLayout>

		<!-- BUTTON -->
		<Button Grid.Row="2"
                Text="Sign Up"
                Clicked="OnSignUpClicked"
                BackgroundColor="#3B82F6"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="55"
                CornerRadius="30"
                Margin="0,10"
                HorizontalOptions="Fill"
                VerticalOptions="Center" />
	</Grid>

</ContentPage>
