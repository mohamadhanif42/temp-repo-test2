<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunitySharing.ForgotPasswordPage"
             Shell.NavBarIsVisible="False">

    <!-- Background gradient -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FFE1CC" Offset="0.0"/>
            <GradientStop Color="#FFF5C8" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="CenterAndExpand">

            <!-- Title -->
            <Label
                Text="Forgot Password?"
                FontSize="30"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                Margin="0,20,0,0"/>

            <!-- Subtitle -->
            <Label
                Text="Enter your email and we'll send you a link to reset your password."
                FontSize="15"
                TextColor="Black"
                Opacity="0.8"
                HorizontalTextAlignment="Center"
                Margin="10,0"/>

            <!-- Email Entry -->
            <Frame CornerRadius="12"
                   HasShadow="True"
                   BackgroundColor="White"
                   Padding="12"
                   Margin="0,15,0,0">
                <Entry
                    x:Name="EmailEntry"
                    Placeholder="Email"
                    Keyboard="Email"
                    FontSize="16"
                    TextColor="Black"/>
            </Frame>

            <!-- Submit Button -->
            <Button
                Text="Submit"
                BackgroundColor="#3B82F6"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="30"
                HeightRequest="55"
                Clicked="OnSubmitClicked"/>

            <!-- Back to Login Link -->
            <Label Text="Back to Login"
                   TextColor="Black"
                   FontSize="14"
                   HorizontalOptions="Center"
                   Margin="0,10">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackToLoginClicked"/>
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
